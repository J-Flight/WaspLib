procedure TAccountForm.UpdateProfileCombo();
var
  i: Integer;
begin
  Self.ProfileCombo.Items.Clear();

  for i := 0 to High(Profiles) do
    Self.ProfileCombo.Items.Add(Profiles[i].Name);

  Self.ProfileCombo.Items.Add('New Profile');
end;



(*
## TAccountForm.AddProfile
```pascal
function TAccountForm.AddProfile(profile: TProfile): Boolean;
```
Adds a new profile to the configuration after validation.
*)
function TAccountForm.AddProfile(profile: TProfile): Boolean;
var
  idx: Integer;
begin
  if not Self.ValidateProfile(profile) then
  begin
    WriteLn('Error: Profile validation failed - missing required fields');
    Exit;
  end;
  
  if Profiles.Contains(profile.Name) then
  begin
    WriteLn('Error: Profile with name "' + profile.Name + '" already exists');
    Exit;
  end;
  
  Profiles += profile;
  idx := High(Profiles);
  Self.SaveProfile(idx, profile);
  Result := True;

  Self.UpdateProfileCombo();
  Self.ProfileCombo.ItemIndex := idx;
  ProfileIndex := idx;
end;

(*
## TAccountForm.UpdateProfile
```pascal
function TAccountForm.UpdateProfile(index: Integer; profile: TProfile): Boolean;
```
Updates an existing profile at the specified index after validation.
*)
function TAccountForm.UpdateProfile(index: Integer; profile: TProfile): Boolean;
begin
  Result := False;

  if not InRange(index, 0, High(Profiles)) then
  begin
    WriteLn('Error: Invalid profile index: ' + ToStr(index));
    Exit;
  end;
  
  if not Self.ValidateProfile(profile) then
  begin
    WriteLn('Error: Profile validation failed - missing required fields');
    Exit;
  end;
  
  Profiles[index] := profile;
  
  Self.SaveProfile(index, profile);
  Result := True;

  Self.UpdateProfileCombo();
  if InRange(index, 0, Self.ProfileCombo.Items.Count - 2) then
  begin
    Self.ProfileCombo.ItemIndex := index;
    ProfileIndex := index;
  end;
end;

(*
## TAccountForm.DeleteProfile
```pascal
function TAccountForm.DeleteProfile(index: Integer): Boolean;
```
Deletes a profile at the specified index.
*)
function TAccountForm.DeleteProfile(index: Integer): Boolean;
var
  path: String;
begin
  if (index < 0) or (index >= Length(Profiles)) then
  begin
    WriteLn('Error: Invalid profile index for deletion: ' + ToStr(index));
    Exit;
  end;
  
  path := Self.GetProfilePath(index);
  if FileExists(path) then
  begin
    try
      FileDelete(path);
    except
      WriteLn('Error: Failed to delete profile file ' + path + ' - ' + GetExceptionMessage());
    end;
  end;

  Profiles.Delete(index);
  Self.ReindexProfiles(index);
  
  Result := True;

  Self.UpdateProfileCombo();
  if Length(Profiles) = 0 then
    Self.ProfileCombo.ItemIndex := 0
  else if index >= Length(Profiles) then
    Self.ProfileCombo.ItemIndex := High(Profiles)
  else
    Self.ProfileCombo.ItemIndex := index;
end;


